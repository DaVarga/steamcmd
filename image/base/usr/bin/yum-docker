#!/bin/bash

_microdnf() {
    microdnf \
        --nodocs \
        --setopt=install_weak_deps=0 \
        -y \
        ${@}
}

install() {
    _microdnf install ${@}
}

update() {
    _microdnf update ${@}
}

remove() {
    _microdnf remove ${@}
}

clean() {
    microdnf -y clean all
}

quick-install() {
    install ${@}
    clean
}

quick-update() {
    update ${@}
    clean
}

${@}
